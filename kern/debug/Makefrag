#
# Makefile fragment for the kernel.
# This is NOT a complete makefile;
# you must run GNU make in the top-level directory
# where the GNUmakefile is located.
#

OBJDIRS += kern/debug

# entry.S must be first, so that it's the first code in the text segment!!!
#
# We also snatch the use of a few handy source files
# from the lib directory, to avoid gratuitous code duplication.
KERN_SRCFILES +=	kern/debug/string.c
KERN_SRCFILES +=	kern/debug/video.c
KERN_SRCFILES +=	kern/debug/kbd.c
KERN_SRCFILES +=	kern/debug/console.c
KERN_SRCFILES +=	kern/debug/cprintf.c
KERN_SRCFILES +=	kern/debug/printfmt.c
KERN_SRCFILES +=	kern/debug/debug.c

# How to build kernel object files
$(OBJDIR)/kern/debug/%.o: kern/debug/%.c
	@echo + cc $<
	@mkdir -p $(@D)
	$(V)$(CC) -nostdinc $(KERN_CFLAGS) -c -o $@ $<

$(OBJDIR)/kern/debug/%.o: kern/debug/%.S
	@echo + as $<
	@mkdir -p $(@D)
	$(V)$(CC) -nostdinc $(KERN_CFLAGS) -c -o $@ $<

