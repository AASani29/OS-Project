# -*-Makefile-*-

KERN_SRCFILES	+= kern/hvm/dev/pci.c
KERN_SRCFILES	+= kern/hvm/dev/pic.c
KERN_SRCFILES	+= kern/hvm/dev/kbd.c

# Targets

$(OBJDIR)/hvm/dev/%.o: kern/hvm/dev/%.c
	@echo + cc $<
	@mkdir -p $(@D)
	$(V)$(CC) $(KERN_CFLAGS) -c -o $@ $<

$(OBJDIR)/hvm/dev/%.o: kern/hvm/dev/%.S
	@echo + as $<
	@mkdir -p $(@D)
	$(V)$(CC) $(KERN_CFLAGS) -c -o $@ $<
