# -*-Makefile-*-

KERN_SRCFILES	+= kern/hvm/svm/svm.c
KERN_SRCFILES	+= kern/hvm/svm/svm_asm.S
KERN_SRCFILES	+= kern/hvm/svm/svm_handle.c
KERN_SRCFILES	+= kern/hvm/svm/svm_utils.c

# Targets

$(OBJDIR)/hvm/svm/%.o: kern/hvm/svm/%.c
	@echo + cc $<
	@mkdir -p $(@D)
	$(V)$(CC) $(KERN_CFLAGS) -c -o $@ $<

$(OBJDIR)/hvm/svm/%.o: kern/hvm/svm/%.S
	@echo + as $<
	@mkdir -p $(@D)
	$(V)$(CC) $(KERN_CFLAGS) -c -o $@ $<
