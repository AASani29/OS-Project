#
# Makefile fragment for the kernel.
# This is NOT a complete makefile;
# you must run GNU make in the top-level directory
# where the GNUmakefile is located.
#

OBJDIRS += kern/arch

# entry.S must be first, so that it's the first code in the text segment!!!
#
# We also snatch the use of a few handy source files
# from the lib directory, to avoid gratuitous code duplication.
KERN_SRCFILES +=	kern/arch/entry.S
KERN_SRCFILES +=	kern/arch/entry_helper.c
KERN_SRCFILES +=	kern/arch/other_helper.c
KERN_SRCFILES +=	kern/arch/spinlock.c
#KERN_SRCFILES +=	kern/arch/cpu.c
KERN_SRCFILES +=	kern/arch/context.c
KERN_SRCFILES +=	kern/arch/trapasm.S
KERN_SRCFILES +=	kern/arch/nvram.c
KERN_SRCFILES +=	kern/arch/mem.c
KERN_SRCFILES +=	kern/arch/pic.c
KERN_SRCFILES +=	kern/arch/lapic.c
KERN_SRCFILES +=	kern/arch/mp.c

# How to build kernel object files
$(OBJDIR)/kern/arch/%.o: kern/arch/%.c
	@echo + cc $<
	@mkdir -p $(@D)
	$(V)$(CC) -nostdinc $(KERN_CFLAGS) -c -o $@ $<

$(OBJDIR)/kern/arch/%.o: kern/arch/%.S
	@echo + as $<
	@mkdir -p $(@D)
	$(V)$(CC) -nostdinc $(KERN_CFLAGS) -c -o $@ $<

